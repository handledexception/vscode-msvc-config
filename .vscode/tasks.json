{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MSVC Build Debug (32-bit)",
            "command": "cmd",
            "type": "process",
            "args": [
                "/C %VCVARSALL32% && cl /Od /Zi /EHsc %LIBS% /Fd:%DEBUG_OUTPATH_32%/vc140.pdb /Fo:%DEBUG_OUTPATH_32%/%TARGETNAME%.obj ${workspaceFolder}/main.c /link /OUT:%DEBUG_OUTPATH_32%/%TARGETNAME%.exe /PDB:%DEBUG_OUTPATH_32%/%TARGETNAME%.pdb"
            ]
        },
        {
            "label": "MSVC Build Debug (64-bit)",
            "command": "cmd",
            "type": "process",
            "args": [
                "/C %VCVARSALL64% && cl /Od /Zi /EHsc %LIBS% /Fd:%DEBUG_OUTPATH_64%/vc140.pdb /Fo:%DEBUG_OUTPATH_64%/%TARGETNAME%.obj ${workspaceFolder}/main.c /link /OUT:%DEBUG_OUTPATH_64%/%TARGETNAME%.exe /PDB:%DEBUG_OUTPATH_64%/%TARGETNAME%.pdb"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        
        {
            "label": "GCC Build Debug (64-bit)",
            "type": "shell",
            "command": "gcc",
            "args": [
                "--std=c99",
                "-march=x86-64",
                "-g",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ],
    "options": {
        "env": {
            "DEBUG_OUTPATH_32": "${workspaceFolder}/Debug/x86",
            "DEBUG_OUTPATH_64": "${workspaceFolder}/Debug/x64",
            "LIBS": "user32.lib",
            "TARGETNAME": "main",
            "VCVARSALL32": "\"C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\VC\\vcvarsall.bat\" x86",
            "VCVARSALL64": "\"C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\VC\\vcvarsall.bat\" x64"
        }
    }
}